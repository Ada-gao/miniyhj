page {
  background: #fff;
}

.tabbar {
  height: 125rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  width: 100%;
  z-index: 1;
  background: #fff;
}

.info {
  margin-top: 125rpx;
  font-size: 28rpx;
  color: #323232;
  padding-left: 51rpx;
  padding-right: 51rpx;
  padding-top: 40rpx;
  background: #fff;
}

.line {
  height: 20rpx;
  background: #f4f5f7;
}

.imglist {
  display: flex;
  flex-direction: row;
  background: #fff;
}

.imgitem {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  margin-top: 40rpx;
}

.img {
  width: 60rpx;
  height: 60rpx;
}

.name {
  font-size: 24rpx;
  color: #323232;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 32rpx;
  color: #000;
}

.form {
  background: #fff;
  padding: 40rpx;
}

.inputItem {
  height: 108rpx;
  border-bottom: 1rpx #e9e9e9 solid;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input {
  height: 108rpx;
  flex: 1;
  font-size: 28rpx;
}

.arrow {
  width: 33rpx;
  height: 33rpx;
}

.item {
  background: #f4f5f7;
  display: flex;
}

.button {
  margin: 40rpx;
  width: 100%;
  line-height: 88rpx;
  background: linear-gradient(-90deg, rgba(47, 107, 226, 1), rgba(93, 144, 244, 1));
  box-shadow: 0px 0px 0px 0px rgba(13, 67, 173, 0.3);
  border-radius: 6rpx;
  color: #fff;
  font-size: 36rpx;
}

.code {
  width: 167rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: #3772e5;
  padding: 0rpx;
  font-size: 28rpx;
  border: 1px solid rgba(55, 114, 229, 1);
  border-radius: 6rpx;
}
