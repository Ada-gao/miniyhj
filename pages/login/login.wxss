.loginbg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.loginicon {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 120rpx;
  height: 120rpx;
}

.txt {
  font-size: 34rpx;
  margin-top: 50rpx;
  color: #e6e6e6;
}

.loginbox {
  margin-top: 160rpx;
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.item {
  border-bottom: 1rpx #e6e6e6 solid;
  display: flex;
  margin-top: 40rpx;
  flex-direction: row;
  height: 70rpx;
  align-items: center;
}

.icon {
  width: 45rpx;
  height: 45rpx;
}

.input {
  flex: 1;
  color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 32rpx;
  width: 100%;
  height: 100%;
}

.phcolor {
  color: #e6e6e6;
}

.button {
  margin-top: 80rpx;
  height: 88rpx;
  background: linear-gradient(-90deg, rgba(47, 107, 226, 1), rgba(93, 144, 244, 1));
  border-radius: 6rpx;
  color: #fff;
  font-size: 36rpx;
}
