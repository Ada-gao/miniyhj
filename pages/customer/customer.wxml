<view class='tabBar'>
  <view class='tabBarTitle'>
    <text>潜客列表</text>
  </view>
</view>
<view class='list'>
  <view class='search' bindtap='openSearch'>
    <image class='icon' src='/image/icon_customer_search.png'></image>
    <text class='txt'>搜索</text>
  </view>
  <view class='tab'>
    <view class='head'>
      <view class="{{tabType==='follow'?'active':'default'}}" bindtap='switchTab' data-type='follow'>
        <text>意向客户（{{followData.totalElements || 0}}）</text>
      </view>
      <view class="{{tabType==='star'?'active':'default'}}" bindtap='switchTab' data-type='star'>
        <text>星标客户（{{starData.totalElements || 0}}）</text>
      </view>
    </view>
  </view>
</view>
<view class='content'>
  <block wx:if="{{tabType==='follow'}}" wx:for="{{followData.content}}">
    <view class='module' bindtap='openTask' data-taskid='{{item.taskId}}'>
      <text class='name'>{{item.contactName}}</text>
      <image class='arrow' src='/image/icon_common_arrow.png' />
    </view>
  </block>
  <block wx:if="{{tabType==='star'}}" wx:for="{{starData.content}}">
    <view class='module' bindtap='openTask' data-taskid='{{item.taskId}}'>
      <text class='name'>{{item.contactName}}</text>
      <image class='arrow' src='/image/icon_common_arrow.png' />
    </view>
  </block>
  <block wx:if="{{(tabType==='follow' && followData.content.length === 0) || (tabType==='star' && starData.content.length === 0)}}">
    <view class='empty'>
      <image class='icon' src='/image/icon_customer_empty.png'></image>
      <text class='txt'>暂无数据</text>
    </view>
  </block>
</view>