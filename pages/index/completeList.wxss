page {
  background: #f4f5f7;
}

.module {
  background: #fff;
  display: flex;
  flex-direction: row;
  height: 94rpx;
  align-items: center;
  padding-left: 20px;
  padding-right: 20px;
  border-bottom: 1rpx #f5f5f5 solid;
}

.module .name {
  font-size: 32rpx;
  color: #323232;
  flex: 1;
}

.module .value {
  font-size: 26rpx;
  margin-right: 20rpx;
}

.module .arrow {
  width: 33rpx;
  height: 33rpx;
}

.red {
  color: #ff393e;
}

.blue {
  color: #2f6be2;
}
