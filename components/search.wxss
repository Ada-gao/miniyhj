.layout {
  background: #f4f5f7;
  display: flex;
  flex-direction: column;
}

.search {
  background: #fff;
  height: 56rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  border-radius: 4rpx;
  align-items: center;
  justify-content: center;
}

.search .icon {
  width: 26rpx;
  height: 26rpx;
}

.search .txt {
  font-size: 26rpx;
  color: #b2b2b2;
  margin-left: 8rpx;
}

.tab {
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 74rpx;
  padding-right: 74rpx;
}

.tab .head {
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 28rpx;
  color: #9c9c9c;
  border: 1rpx solid #b8b8b8;
  border-radius: 6rpx;
  background: #fff;
}

.tab .head .active {
  background: linear-gradient(-90deg, #2f6be2, #5d90f4);
  color: #fff;
  flex: 1;
  line-height: 64rpx;
  text-align: center;
}

.tab .head .default {
  flex: 1;
  line-height: 64rpx;
  text-align: center;
}
