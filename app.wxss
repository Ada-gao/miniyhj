/**app.wxss**/
@import 'weui.wxss';
page {
  display: flex;
  flex-direction: column;  
}
.button {
  margin-top: 60rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  line-height: 98rpx;
  background: linear-gradient(-90deg, rgba(47, 107, 226, 1), rgba(93, 144, 244, 1));
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.text-center {
  text-align: center;
}
.text-left {
  text-align: left;
}
